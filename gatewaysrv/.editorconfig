root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,kts,kt}]
indent_style = space
indent_size = 4
continuation_indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{sh,bash}]
end_of_line = lf
charset = utf-8

[*.md]
trim_trailing_whitespace = false
