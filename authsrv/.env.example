# ============================================
# Authsrv - 环境变量配置模板
# ============================================
# 使用方法: cp .env.example .env.local
# 然后编辑 .env.local 填写实际值

# -------------------
# 应用配置
# -------------------
SPRING_PROFILES_ACTIVE=dev

# -------------------
# 敏感配置 (通过环境变量传入)
# -------------------
# JWT 密钥（必需）- Nacos 配置中使用 ${JWT_SECRET} 占位符引用
# 生成方法: openssl rand -base64 64
# ⚠️ 生产环境请使用强密码并通过密钥管理服务存储
JWT_SECRET=

# Jasypt 加密密码（可选）- 用于 Nacos 配置文件中的敏感信息加密
# 生成方法: openssl rand -base64 32
JASYPT_PASSWORD=

# -------------------
# Nacos 配置
# -------------------
NACOS_HOST=nexora-nacos
NACOS_PORT=8848
NACOS_NAMESPACE=dev
NACOS_USERNAME=
NACOS_PASSWORD=

# Nacos 配置开关
NACOS_CONFIG_ENABLED=true
NACOS_DISCOVERY_ENABLED=true

# 服务实例权重 (1-100, 用于灰度发布)
SERVICE_WEIGHT=1

# -------------------
# 数据库配置（可选，Nacos 默认值已配置）
# -------------------
DB_HOST=localhost
DB_PORT=3306
DB_NAME=authdb
DB_USERNAME=root
DB_PASSWORD=

# -------------------
# Redis 配置（可选，Nacos 默认值已配置）
# -------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# -------------------
# Kafka 配置（可选，Nacos 默认值已配置）
# -------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# -------------------
# 测试账号（用于 QA 和快速测试）
# -------------------
TEST_USERNAME=admin
TEST_PASSWORD=admin123

# -------------------
# Observability（可选）
# -------------------
# OpenTelemetry 追踪端点
# 本地开发: http://host.docker.internal:4317/v1/spans
OTLP_ENDPOINT=

# 追踪采样率 (0.0 - 1.0)
# dev/test: 1.0, prod: 0.1
TRACING_SAMPLING_PROBABILITY=1.0

